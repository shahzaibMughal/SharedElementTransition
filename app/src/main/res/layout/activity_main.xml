<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:padding="20dp"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/androidImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:onClick="startActivityOne"
        app:srcCompat="@drawable/ic_android_black_24dp"
        android:transitionName="@string/androidImage"/>

    <ImageView
        android:id="@+id/adbImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:onClick="startActivityTwo"
        app:srcCompat="@drawable/ic_adb_black_24dp"
        android:transitionName="@string/adbImage"/>

</LinearLayout>